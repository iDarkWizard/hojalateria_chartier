<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/settings_container"
        android:layout_width="200dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/load_data_setting_background"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/background_light"
        app:layout_constraintTop_toTopOf="@id/settings_container"
        app:layout_constraintLeft_toLeftOf="@id/settings_container"/>

    <TextView
        android:id="@+id/load_data_setting"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:fontFamily="@font/inter_regular"
        android:text="Actualizar datos"
        android:textColor="@color/text_primary"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/settings_container"
        app:layout_constraintRight_toRightOf="@id/settings_container"
        app:layout_constraintTop_toTopOf="@+id/load_data_setting_background"
        app:layout_constraintBottom_toBottomOf="@+id/load_data_setting_background"/>

    <View
        android:id="@+id/show_version_setting_background"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/background_light"
        app:layout_constraintTop_toBottomOf="@id/load_data_setting_background"
        app:layout_constraintLeft_toLeftOf="@id/settings_container"
        />

    <TextView
        android:id="@+id/show_version_setting"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:fontFamily="@font/inter_regular"
        android:text="Mostrar versiÃ³n"
        android:textColor="@color/text_primary"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/settings_container"
        app:layout_constraintRight_toRightOf="@id/settings_container"
        app:layout_constraintTop_toTopOf="@+id/show_version_setting_background"
        app:layout_constraintBottom_toBottomOf="@id/show_version_setting_background"/>


    <View
        android:id="@+id/unload_data_background"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/background_light"
        app:layout_constraintTop_toBottomOf="@id/show_version_setting_background"
        app:layout_constraintLeft_toLeftOf="@id/settings_container"
        />

    <TextView
        android:id="@+id/unload_data_setting"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:fontFamily="@font/inter_regular"
        android:text="Borrar todos los datos."
        android:textColor="@color/text_primary"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/unload_data_background"
        app:layout_constraintRight_toRightOf="@id/unload_data_background"
        app:layout_constraintTop_toTopOf="@+id/unload_data_background"
        app:layout_constraintBottom_toBottomOf="@id/unload_data_background"/>

</androidx.constraintlayout.widget.ConstraintLayout>