<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/version_container"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:fontFamily="@font/inter_regular"
        android:text="Actualizar datos"
        android:textColor="@color/text_primary"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/version_container"
        app:layout_constraintLeft_toLeftOf="@+id/version_container"
        app:layout_constraintRight_toRightOf="@id/version_container"
        app:layout_constraintTop_toTopOf="@+id/version_container" />


</androidx.constraintlayout.widget.ConstraintLayout>