<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/settings_container"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/from_sd_setting_background"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/background_light"
        app:layout_constraintTop_toTopOf="@id/settings_container"
        app:layout_constraintLeft_toLeftOf="@id/settings_container"/>

    <TextView
        android:id="@+id/from_sd_setting"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:fontFamily="@font/inter_regular"
        android:text="Cargar desde memoria"
        android:textColor="@color/text_primary"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/settings_container"
        app:layout_constraintRight_toRightOf="@id/settings_container"
        app:layout_constraintTop_toTopOf="@+id/from_sd_setting_background"
        app:layout_constraintBottom_toBottomOf="@+id/from_sd_setting_background"/>

    <View
        android:id="@+id/from_git_setting_background"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/background_light"
        app:layout_constraintTop_toBottomOf="@id/from_sd_setting_background"
        app:layout_constraintLeft_toLeftOf="@id/settings_container"
        />

    <TextView
        android:id="@+id/from_git_setting"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:fontFamily="@font/inter_regular"
        android:text="Descargar de Internet"
        android:textColor="@color/text_primary"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/settings_container"
        app:layout_constraintRight_toRightOf="@id/settings_container"
        app:layout_constraintTop_toTopOf="@+id/from_git_setting_background"
        app:layout_constraintBottom_toBottomOf="@id/from_git_setting_background"/>


</androidx.constraintlayout.widget.ConstraintLayout>